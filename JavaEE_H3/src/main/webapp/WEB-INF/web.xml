<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>JavaEE_H2</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>com.pfq.javaee.servlet.MainServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	
	

	<filter>
		<filter-name>FilterUTF8</filter-name>
		<filter-class>com.pfq.javaee.filters.FilterUTF8</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>FilterUTF8</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>FilterNavigateMenu</filter-name>
		<filter-class>com.pfq.javaee.filters.FilterNavigateMenu</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>FilterNavigateMenu</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>FilterResources</filter-name>
		<filter-class>com.pfq.javaee.filters.FilterResources</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>FilterResources</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/JSP/error-404.jsp</location>
	</error-page>

	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/JSP/error-403.jsp</location>
	</error-page>

</web-app>